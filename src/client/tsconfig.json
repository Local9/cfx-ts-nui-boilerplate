{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es2017",
        "allowJs": true,
        "lib": [
            "es2017"
        ],
        "types": [
            "@citizenfx/client",
            "@types/node"
        ],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
    },
    "include": [
        "./**/*",
        "../shared/**/*"
    ],
    "exclude": [
        "**/node_modules"
    ]
}