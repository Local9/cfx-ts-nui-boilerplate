{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "lib": ["es2017"],
        "types": ["@types/node"],
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": ["./**/*"],
    "exclude": ["**/node_modules"]
}
